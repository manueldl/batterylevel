_pkgver_year=2017
_pkgver_month=04
_pkgver_day=04

_gitname=batterylevel
pkgname==${_gitname}-git
pkgver=1
pkgrel=1
pkgdesc="Watchs battery levels and performs some actions"
arch=('any')
url="https://github.com/manueldl/${_gitname}"
source=("git+https://github.com/manueldl/${_gitname}.git")
license=('GPL3')
depends=('python' 'beep')
makedepends=('git')
# 'ruby-ronn' 'gzip')
conflicts=(${_gitname})
install="${_gitname}.install"
backup=('etc/batterylevel.ini')
md5sums=('SKIP')

pkgver() {
  cd ${srcdir}/${_gitname}
  git rev-list --count HEAD
}

#build() {
#    cd "${srcdir}/${_gitname}"
#make PREFIX=${pkgdir}/usr
#    ronn -r --pipe man/es/${_gitname}.1.md | gzip -c > man/es/${_gitname}.1.gz
#    }

package() {
    cd "${srcdir}/${_gitname}"
    make PREFIX=${pkgdir}/usr install
    }
